<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef Abstract="True" Name="Mr_PlayerFactionBase">
    <settlementTexturePath>Icon/MR_Icon</settlementTexturePath>
    <colorSpectrum>
      <li>(1, 1, 1)</li>
    </colorSpectrum>
  </FactionDef>
  
  
  <!-- 플레이어 -->
  <FactionDef ParentName="Mr_PlayerFactionBase">
    <defName>Maru_PlayerFaction</defName>
    <label>Clan</label>
    <description>당신의 정착지입니다.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>Maru_Colonist</basicMemberKind>
    <pawnSingular>Maru</pawnSingular>
    <pawnsPlural>Snow Leopards</pawnsPlural>
    <techLevel>Industrial</techLevel>
    <backstoryCategories>
      <li>Offworld</li>
    </backstoryCategories>
    <factionIconPath>Icon/MR_Icon</factionIconPath>
    <settlementTexturePath>Icon/MR_HomeIcon</settlementTexturePath>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <geneticVariance>1</geneticVariance>
    <startingResearchTags>
      <li>ClassicStart</li>
    </startingResearchTags>

    <apparelStuffFilter>
      <thingDefs>
		<li>Cloth</li>
      </thingDefs>
    </apparelStuffFilter>

    <allowedCultures>
    </allowedCultures> 
    <requiredMemes>
    </requiredMemes>
    <disallowedMemes>
    </disallowedMemes>
    <structureMemeWeights>
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Animist>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
    </structureMemeWeights>
<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation> 
    <configurationListOrderPriority>32</configurationListOrderPriority>


  </FactionDef>

  
  
  <!-- 팩션 -->

  <FactionDef ParentName="Mr_PlayerFactionBase" Name="MaruFactionBase" Abstract="True">
		<pawnSingular>Maru</pawnSingular>
		<pawnsPlural>Snow Leopards</pawnsPlural>
		<listOrderPriority>30</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canMakeRandomly>true</canMakeRandomly>
		<humanlikeFaction>true</humanlikeFaction>
		<leaderTitle>Head</leaderTitle>
		<factionIconPath>Icon/MR_Icon</factionIconPath>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Spacer</techLevel>
    <backstoryCategories>
      <li>Outlander</li>
		</backstoryCategories>
		<geneticVariance>0.7</geneticVariance>
		
		<caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>
			<min>-60</min>
			<max>50</max>
		</allowedArrivalTemperatureRange>

    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li> <!--Constant 1 at all points levels-->
      </points>
    </raidCommonalityFromPointsCurve>

    <raidLootMaker>MaruRaidLootMaker</raidLootMaker>

		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <!-- 송곳니 -->
     <li>
        <kindDef>Combat</kindDef>
        <commonality>50</commonality>
        <options>
          <MRP_fangs>20</MRP_fangs>
        </options> 
      </li>
      <li>
        <!-- 정규군only -->
        <kindDef>Combat</kindDef>
        <commonality>15</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <MRP_fangs>20</MRP_fangs>
        </options>
      </li>
      <li>
        <!-- 방어군 -->
           <kindDef>Settlement</kindDef>
        <options>
          <MRP_Deciphers>8</MRP_Deciphers>
          <MRP_Hunter>20</MRP_Hunter>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <MRP_Hunter>20</MRP_Hunter>
          <MRP_Doctor>20</MRP_Doctor>
          <MRP_Caravan>5</MRP_Caravan>
          <MRP_Work>20</MRP_Work>
          <MRP_Engineer>20</MRP_Engineer>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <MRP_Caravan>20</MRP_Caravan>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
        </carriers>
        <guards>
          <MRP_Hunter>20</MRP_Hunter>
          <MRP_Doctor>8</MRP_Doctor>
        </guards> 
      </li>
      </pawnGroupMakers>
		<settlementTexturePath>Icon/MR_Icon</settlementTexturePath>
	</FactionDef>
  
  
  <FactionDef ParentName="MaruFactionBase">
    <defName>MRF_Hyperborea</defName>
    <label>upper mountain</label>
    <description>Maru</description>
    <colorSpectrum>
      <li>(1, 1, 1)</li>
      <li>(1, 1, 1)</li>
    </colorSpectrum>
    
<allowedCultures>
    </allowedCultures> 
    <requiredMemes>
    </requiredMemes>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <structureMemeWeights>
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Animist>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
    </structureMemeWeights>
<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation> 
    <configurationListOrderPriority>32</configurationListOrderPriority>

  </FactionDef>
  
<ThingSetMakerDef>
    <defName>MaruRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Silver</li>
            <li>MR_Sarira</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
  
  
</Defs>
